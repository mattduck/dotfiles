#!/bin/bash

brew update

brew install \
    coreutils \
    git \
    python \
    python3 \
    tmux \
    tree \
    irssi \
    ack \
    wget \
    bash-completion \
    macvim \
    emacs \
    postgresql \
    fasd \
    oath-toolkit \
    ansible \
    fzf \
    shellcheck \
    markdown \
    go \
    moreutils \

#Â Brew is easiest way to compile with python
brew install vim

# Required to allow tmux to merge w/osx clipboard
brew install reattach-to-user-namespace

# Flyspell expects this
brew install ispell --with-lang-en

# JS linter including jsx / react.
# I just copied these dependencies from
# http://codewinds.com/blog/2015-04-02-emacs-flycheck-eslint-jsx.html and it
# seems to work
npm install -g eslint eslint-plugin-react babel-eslint

pip install virtualenvwrapper
