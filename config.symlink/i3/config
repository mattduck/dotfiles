                #focused_workspace  "#87afaf" "#285577" "#ffffff"
                focused_workspace  "#87afaf" "#83a598" "#ffffd7"
                active_workspace   "#333333" "#5f676a" "#ffffd7"
                inactive_workspace "#333333" "#222222" "#888888"
                urgent_workspace   "#333333" "#9d0006" "#ffffd7"
        }
}


mode "md" {
    bindsym $mod+w mode "default"
    #bindsym r mode "resize"

    bindsym o fullscreen toggle; mode "default"
    bindsym Shift+r restart; mode "default"

    bindsym Shift+5 split h; mode "default"; exec albert show
    bindsym Shift+apostrophe split v; mode "default"; exec albert show

    #bindsym Shift+L exec "i3lock -c 000000"; mode "default"

    bindsym h focus left; mode "default"
    bindsym j focus down; mode "default"
    bindsym k focus up; mode "default"
    bindsym l focus right; mode "default"

    bindsym Shift+h move left; mode "default"
    bindsym Shift+j move down; mode "default"
    bindsym Shift+k move up; mode "default"
    bindsym Shift+l move right; mode "default"

    bindsym $mod+h resize shrink width 10 px or 10 ppt; mode "default"
    bindsym $mod+j resize grow height 10 px or 10 ppt; mode "default"
    bindsym $mod+k resize shrink height 10 px or 10 ppt; mode "default"
    bindsym $mod+l resize grow width 10 px or 10 ppt; mode "default"

    bindsym space layout toggle all; mode "default"
    bindsym Shift+X exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"; mode "defualt"
}

