        #mode hide
        position top
        status_command ~/.config/i3-status-bash.sh
        tray_output primary
        workspace_buttons yes
        strip_workspace_numbers no

        colors {
                #background "#32302f"
                background "#1d2021"
                statusline "#eeeeee"
                separator "#666666"
                #                  border  backgr. text
                # focused_workspace  "#1d2021" "#ebdbb2" "#1d2021"
                focused_workspace  "#1d2021" "#1d2021" "#ffffd7"
                active_workspace   "#1d2021" "#1d2021" "#a89984"
                inactive_workspace "#1d2021" "#1d2021" "#a89984"
                urgent_workspace   "#1d2021" "#1d2021" "#a89984"
        }
}


mode "md" {
    bindsym $mod+w mode "default"
    bindsym Escape mode "default"
    #bindsym r mode "resize"

    bindsym o fullscreen toggle; mode "default"
    bindsym Shift+r restart; mode "default"

    #bindsym Shift+5 split h; mode "default"; fullscreen disable; exec "emacsclient -ne '(call-interactively (quote md/alfred))'"
    #bindsym Shift+apostrophe split v; mode "default"; fullscreen disable; exec "emacsclient -ne '(call-interactively (quote md/alfred))'"

    bindsym h focus left; mode "default"
    bindsym j focus down; mode "default"
    bindsym k focus up; mode "default"
    bindsym l focus right; mode "default"

    bindsym Shift+3 exec i3-input -F "%s" -P "i3-msg: "; mode default

    #bindsym Shift+4 exec "scrot -z /f/inbox/screenshots/$(date --iso-8601=second).jpg"; mode "default"
    #bindsym --release Shift+Control+4 exec "scrot -z -s /f/inbox/screenshots/$(date --iso-8601=second).jpg"; mode "default"

    bindsym Shift+4 exec ",screenshot --image-selection"; mode "default"
    bindsym Shift+5 exec ",screenshot --video-selection-start"; mode "default"
    bindsym Shift+6 exec ",screenshot --video-stop"; mode "default"

    bindsym Shift+h move left; mode "default"
    bindsym Shift+j move down; mode "default"
    bindsym Shift+k move up; mode "default"
    bindsym Shift+l move right; mode "default"

    # Floating / scratchpad
    bindsym Shift+q move scratchpad; mode "default"
    bindsym t floating toggle; mode "default"

    bindsym $mod+h resize shrink width 10 px or 10 ppt; mode "default"
    bindsym $mod+j resize grow height 10 px or 10 ppt; mode "default"
    bindsym $mod+k resize shrink height 10 px or 10 ppt; mode "default"
    bindsym $mod+l resize grow width 10 px or 10 ppt; mode "default"

    bindsym m exec ",display mirror; xbacklight -set 0"; mode "default"
    bindsym Shift+m exec ",display second"; mode "default"
    bindsym Shift+Control+m exec ",display laptop"; mode "default"

    bindsym space layout toggle all; mode "default"
    bindsym Shift+X exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"; mode "default"
}

bindsym $mod+w mode "md"
bindsym $mod+q scratchpad show;

bindsym $mod+Shift+space exec "dmenu_run"
